/* ul nav list must have class of "nav-tabs" */



.nav-tabs {
	 margin:0; 
	 padding:0;
	 list-style:none;
	 text-align:center;
	 border-bottom: 1px solid #dddddd;
	
	 
	 	 	 
	 }

.nav-tabs > li {
	display:inline;
	margin:0 0 10px 0; 
	padding:0;
	
	
}

.nav-tabs > li > a {
	display:inline-block;
	margin:0;
	padding:5px 10px 5px 10px; /* top,right, bottom, left */
	white-space:nowrap;
	border-top: 1px solid #dddddd;
	border-right: 1px solid #dddddd;
	border-left: 1px solid #dddddd;
	border-radius: 4px 4px 0 0;
	
}

.nav-tabs > li > a.active,
.nav-tabs > li > a:active,
.nav-tabs > li > a:hover,
.nav-tabs > li > a:focus {
  text-decoration:none;
  font-weight:700; /* weight 700 is regular bold */
  
}

.nav-tabs > li > a.active {
	 font-weight:700; /* weight 700 is regular bold */
	 margin-bottom:-1px; /* creates overlap to hide line using white border below */
	border-bottom:solid 1px white;
	
}
	
	
